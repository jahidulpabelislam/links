# Custom error pages
ErrorDocument 401 /error/401/
ErrorDocument 403 /error/403/
ErrorDocument 404 /error/404/
ErrorDocument 500 /error/500/

# Block user from viewing list of files in a directory
Options -Indexes
IndexIgnore *

# Block access to some files/directorys

# Apache 2.4
<IfModule mod_authz_core.c>
    <Files README.md>
        Require all denied
    </Files>

    <Files .htaccess>
        Require all denied
    </Files>

    <Files .gitignore>
        Require all denied
    </Files>

    <Files /.git/>
       Require all denied
    </Files>

    <Files /logs/>
       Require all denied
    </Files>
</IfModule>

# Apache 2.2
<IfModule !mod_authz_core.c>
    <Files README.md>
        Require all denied
    </Files>

    <Files .htaccess>
        Require all denied
    </Files>

    <Files .gitignore>
        Order Allow,Deny
        Deny from all
    </Files>

    <Files /.git/>
       Order Allow,Deny
       Deny from all
    </Files>

    <Files /logs/>
       Order Allow,Deny
       Deny from all
    </Files>
</IfModule>
